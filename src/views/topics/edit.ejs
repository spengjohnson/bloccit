<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body>
    <% include ../static/partials/navbar.ejs %>
        <main class="container">
            <h1>Edit Topic</h1>
            <form action="/topics/<%=topics.id %>/update" method="post">
                <div class="form-group">
                    <label for="title">Topic Title</label>
                    <input value="<%= topics.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= topics.description %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </main>
        <% include ../static/partials/baseScripts.ejs %>
</body>

</html>